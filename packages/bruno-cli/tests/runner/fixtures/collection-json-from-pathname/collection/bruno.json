{
  "version": "1",
  "name": "collection",
  "type": "collection",
  "ignore": [
    "node_modules",
    ".git"
  ],
  "proxy": {
    "enabled": false,
    "protocol": "http",
    "hostname": "<proxy-hostname>",
    "port": 3000,
    "auth": {
      "enabled": false,
      "username": "<user-name>",
      "password": "<password>"
    },
    "bypassProxy": ""
  },
  "scripts": {
    "moduleWhitelist": ["crypto", "buffer"],
    "filesystemAccess": {
      "allow": true
    }
  },
  "clientCertificates": {
    "enabled": true,
    "certs": []
  }
}