{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "themes/*": ["src/themes/*"],
      "api/*": ["src/api/*"],
      "pageComponents/*": ["src/pageComponents/*"],
      "providers/*": ["src/providers/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
