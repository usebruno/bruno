meta {
  name: 2-Legged OAuth 1.0 with HMAC-SHA1
  type: http
  seq: 1
}

post {
  url: {{oauth1_base_url}}/api/auth/oauth1/two_legged/resource
  body: none
  auth: oauth1
}

auth:oauth1 {
  consumer_key: {{oauth1_consumer_key}}
  consumer_secret: {{oauth1_consumer_secret}}
  signature_method: HMAC-SHA1
  parameter_transmission: authorization_header
  credentials_id: oauth1_test_creds
}

assert {
  res.status: eq 200
  res.body.message: eq OAuth 1.0 2-legged authorization successful
  res.body.resource.user: eq test_user
}

tests {
  test("should return 200 status", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("should return protected resource", function() {
    expect(res.getBody().resource).to.be.an('object');
    expect(res.getBody().resource.user).to.equal('test_user');
  });

  test("should include OAuth params in response", function() {
    expect(res.getBody().oauth_params).to.be.an('object');
    expect(res.getBody().oauth_params.signature_method).to.equal('HMAC-SHA1');
  });
}
