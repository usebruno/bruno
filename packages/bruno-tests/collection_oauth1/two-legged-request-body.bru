meta {
  name: 2-Legged OAuth 1.0 with Request Body
  type: http
  seq: 7
}

post {
  url: {{oauth1_base_url}}/api/auth/oauth1/two_legged/resource
  body: none
  auth: oauth1
}

auth:oauth1 {
  consumer_key: {{oauth1_consumer_key}}
  consumer_secret: {{oauth1_consumer_secret}}
  signature_method: HMAC-SHA1
  parameter_transmission: request_body
  credentials_id: oauth1_test_creds
}

assert {
  res.status: eq 200
  res.body.message: eq OAuth 1.0 2-legged authorization successful
}

tests {
  test("should support request body parameter transmission", function() {
    expect(res.getStatus()).to.equal(200);
  });
}
