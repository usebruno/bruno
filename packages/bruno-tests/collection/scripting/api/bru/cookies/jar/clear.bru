meta {
  name: clear all cookies
  type: http
  seq: 5
}

post {
  url: {{echo-host}}
  body: json
  auth: none
}

script:pre-request {
  const jar = bru.cookies.jar();
  let url = req.getUrl();
  jar.set(url, "cookie1", "value1");
  jar.set(url, "cookie2", "value2");
}

tests {
  test("should clear all cookies", function() {
    const jar = bru.cookies.jar();
    jar.clear("{{echo-host}}", function(err) {
      expect(err).to.be.null;
      jar.getAll("{{echo-host}}", function(err, cookies) {
        expect(err).to.be.null;
        expect(cookies).to.be.an("array").that.is.empty;
      });
    });
  });
}
