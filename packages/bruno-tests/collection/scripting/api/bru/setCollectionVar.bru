meta {
  name: setCollectionVar
  type: http
  seq: 25
}

get {
  url: {{host}}/ping
  body: none
  auth: none
}

script:post-response {
  bru.setCollectionVar("testSetCollectionVar", "collection-test-value")
}

tests {
