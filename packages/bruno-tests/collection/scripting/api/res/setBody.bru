meta {
  name: setBody
  type: http
  seq: 7
}

post {
  url: {{host}}/api/echo/json
  body: json
  auth: none
}

body:json {
  {
    "hello": "bruno"
  }
}

assert {
  res.status: eq 200
}

script:post-response {
  res.setBody({
    hello : "hello from postres"
  })
}

tests {
  test("res.setBody(data)", function() {
    const body = res.getBody();
    expect(body.hello).to.eql("hello from postres");
  });
  
}
